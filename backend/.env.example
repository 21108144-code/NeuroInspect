# NeuroInspect Backend Environment Configuration
# Copy this to .env and configure

# Application Settings
APP_NAME=NeuroInspect
APP_ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Model Configuration
MODEL_DEVICE=cuda  # cuda or cpu
MODEL_WEIGHTS_DIR=./weights
DETECTION_THRESHOLD=0.5
LOCALIZATION_THRESHOLD=0.3
SEVERITY_WEIGHTS_AREA=0.4
SEVERITY_WEIGHTS_INTENSITY=0.3
SEVERITY_WEIGHTS_LOCATION=0.3

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/neuroinspect.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_BATCH_SIZE=32
INFERENCE_WORKERS=4
IMAGE_MAX_SIZE=1024

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
